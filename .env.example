# This is an example environment file for Vercel deployment
# Copy this file to .env.local for local development or configure these in Vercel dashboard

# Database settings (required)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# NextAuth.js secret for session security (required)
NEXTAUTH_SECRET=your-secret-key
NEXTAUTH_URL=http://localhost:5000

# Set to 'true' only initially to seed the database with sample data
SEED_DATABASE=false 

# Base URL - will be automatically set by Vercel in production
BASE_URL=http://localhost:5000

# Set to 'production' in production environment
NODE_ENV=development